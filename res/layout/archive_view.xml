<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

	<geotag.example.sbickt.BackgroundView
    	android:layout_width="fill_parent"
    	android:layout_height="fill_parent" />
	
	<ListView android:id="@+id/archive_list"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_height="fill_parent"
		android:padding="20dp"
		android:inputType="textMultiLine"
		android:layout_marginLeft="10dp"
		android:layout_marginBottom="10dp" android:layout_width="350dp" android:background="#ff0000" android:layout_marginTop="75dp">
		
	</ListView>
	
	<ImageButton android:id="@+id/category_private"
		android:src="@drawable/category_private"
		android:background="@null"
		android:scaleType="fitCenter"
		android:layout_height="@dimen/icon_small_size"
		android:layout_width="@dimen/icon_small_size"
		android:layout_marginLeft="10dp"
		android:layout_marginBottom="10dp"
		android:layout_toLeftOf="@+id/category_friends" android:layout_alignTop="@+id/category_public">
		
	</ImageButton>
	
	<ImageButton android:id="@+id/category_friends"
		android:src="@drawable/category_friends"
		android:background="@null"
		android:scaleType="fitCenter"
		android:layout_height="@dimen/icon_small_size"
		android:layout_width="@dimen/icon_small_size"
		android:layout_marginLeft="10dp"
		android:layout_marginBottom="10dp"
		android:layout_toLeftOf="@+id/category_public" android:layout_alignTop="@+id/category_public">
		
	</ImageButton>
	
	<ImageButton android:id="@+id/category_public"
		android:src="@drawable/category_public"
		android:background="@null"
		android:scaleType="fitCenter"
		android:layout_height="@dimen/icon_small_size"
		android:layout_width="@dimen/icon_small_size"
		android:layout_marginLeft="10dp"
		android:layout_marginBottom="10dp"
		android:layout_alignRight="@+id/archive_list" android:layout_alignParentTop="true" android:layout_marginTop="30dp">
		
	</ImageButton>
	
</RelativeLayout>
