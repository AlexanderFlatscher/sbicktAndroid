<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

	<include layout="@layout/background" />
	
	<ListView android:id="@+id/archive_list"
		android:layout_alignParentBottom="true"
		android:layout_alignParentLeft="true"
		android:layout_height="fill_parent"
		android:padding="20dp"
		android:inputType="textMultiLine"
		android:layout_below="@+id/background_left"
		android:layout_marginLeft="10dp"
		android:layout_marginBottom="10dp" android:layout_width="350dp" android:background="#ff0000">
		
	</ListView>
	
	<ImageButton android:id="@+id/category_private"
		android:src="@drawable/category_private"
		android:background="@null"
		android:scaleType="fitCenter"
		android:layout_height="@dimen/icon_small_size"
		android:layout_width="@dimen/icon_small_size"
		android:layout_marginLeft="10dp"
		android:layout_marginBottom="10dp"
		android:layout_toLeftOf="@+id/category_friends"
		android:layout_above="@+id/archive_list">
		
	</ImageButton>
	
	<ImageButton android:id="@+id/category_friends"
		android:src="@drawable/category_friends"
		android:background="@null"
		android:scaleType="fitCenter"
		android:layout_height="@dimen/icon_small_size"
		android:layout_width="@dimen/icon_small_size"
		android:layout_marginLeft="10dp"
		android:layout_marginBottom="10dp"
		android:layout_toLeftOf="@+id/category_public"
		android:layout_above="@+id/archive_list">
		
	</ImageButton>
	
	<ImageButton android:id="@+id/category_public"
		android:src="@drawable/category_public"
		android:background="@null"
		android:scaleType="fitCenter"
		android:layout_height="@dimen/icon_small_size"
		android:layout_width="@dimen/icon_small_size"
		android:layout_marginLeft="10dp"
		android:layout_marginBottom="10dp"
		android:layout_above="@+id/archive_list"
		android:layout_alignRight="@+id/archive_list">
		
	</ImageButton>
	
</RelativeLayout>
